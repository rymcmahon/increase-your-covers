<div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "material-form col s12 m8 l6 offset-m2 offset-l3" }) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, id:"email", class:"validate", autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password, id: "password", autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, id:"rememberme" %>
          <%= f.label :remember_me %>
        <% end -%>
      </div>
    </div>
    <div class="row">
      <div class="col s2">
        <%= f.submit "Log in", class:"btn waves-effect waves-light analyze-btn col s12" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col s4 devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>