<div class="container blog-form">
  <div class="row">
    <%= form_for :article, url: articles_path, :html => {multipart: true, :class => "col s12"} do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="col s12">
          <%= f.label :title, class:"new-blog-label" %>
          <%= f.text_area :title, :class => "tinymce", :rows => 40, :cols => 120 %>
          <%= tinymce %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <%= f.label :body, class:"new-blog-label" %>
          <%= f.text_area :body, :class => "tinymce", :rows => 40, :cols => 120 %>
          <%= tinymce %>
        </div>
      </div>
      <div class="row">
        <div class="col 6">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="row">
        <div class="col s4">
          <%= f.submit "Create", class:"btn waves-effect waves-light happy-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>






