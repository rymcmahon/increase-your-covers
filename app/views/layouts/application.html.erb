  </head>

  <body class="grey lighten-5">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <header>
      <nav id="main-nav">
        <div class="nav-wrapper">
          <%= link_to root_path, data: { no_turbolink: true } do %>
            <%= image_tag "wordmark-logo.png", id:"wordmark" %>
          <% end %>
          <a href="/" data-activates="mobile-demo" class="button-collapse" data-turbolinks="false"><i class="material-icons hamburger">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <li><%= link_to "Home", root_path, class: "nav-links" %></li>
            <li><%= link_to "Services", pages_services_path, class: "nav-links" %></li>
            <li><%= link_to "Blog", {controller: "/articles", action: "index"}, class:"nav-links" %></li>
            <% if user_signed_in? %>
              <li><%= link_to('Log Out', destroy_user_session_path, :method => :delete, class:"nav-links") %></li>
            <% end %>
          </ul>
          <ul class="side-nav mobile-nav" id="mobile-demo">
            <li><%= link_to "Home", root_path, class: "nav-links" %></li>
            <li><%= link_to "Services", pages_services_path, class: "nav-links" %></li>
            <li><%= link_to "Blog", {controller: "/articles", action: "index"}, class:"nav-links" %></li>
            <% if user_signed_in? %>
              <li><%= link_to('Log Out', destroy_user_session_path, :method => :delete, class:"nav-links") %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="page-footer" id="footer-background">
      <div class="row center">
        <div class="col l4 s12">
          <h4 class="white-text footer-brand-name">CoverCentric</h4>
          <h6 class="grey-text text-lighten-4">Reclaim Your Reservations</h6>
        </div>
        <div class="col l4 s12"></div>
        <div class="col l4 s12" id="footer-social-icons">
          <ul>
            <li class="social-links"><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <li class="social-links"><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <li class="social-links"><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="footer-copyright center">
      </div>
    </footer>
