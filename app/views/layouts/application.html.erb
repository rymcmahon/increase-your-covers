<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>
  </head>

  <body class="grey lighten-5">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <header>
      <nav>
        <div class="nav-wrapper">
          <a href="/" class="brand-logo brand-name" data-turbolinks="false"><i class="material-icons logo">track_changes</i>CoverCentric</a>
          <a href="/" data-activates="mobile-demo" class="button-collapse" data-turbolinks="false"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <li><%= link_to "Home", root_path, class: "nav-links" %></li>
            <li><%= link_to "Website Critic", {controller: "/assessment_requests", action: "new"}, class: "nav-links" %></li>
            <li><%= link_to "Blog", {controller: "/articles", action: "index"}, class:"nav-links" %></li>
            <% if user_signed_in? %>
              <li><%= link_to('Log Out', destroy_user_session_path, :method => :delete) %></li>
            <% end %>
          </ul>
          <ul class="side-nav mobile-nav" id="mobile-demo">
            <li><%= link_to "Home", root_path, class: "nav-links" %></li>
            <li><%= link_to "Website Critic", {controller: "/assessment_requests", action: "new"}, class: "nav-links" %></li>
            <li><%= link_to "Blog", {controller: "/articles", action: "index"}, class:"nav-links" %></li>
            <% if user_signed_in? %>
              <li><%= link_to('Log Out', destroy_user_session_path, :method => :delete) %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="page-footer">
      <div class="row center">
        <div class="col l4 s12">
          <h4 class="white-text brand-name">CoverCentric</h4>
          <h6 class="grey-text text-lighten-4">Increase Your Restaurantâ€™s Covers</h6>
        </div>
        <div class="col l4 s12"></div>
        <div class="col l4 s12" id="footer-social-icons">
          <ul>
            <li class="social-links"><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="footer-copyright center">
      </div>
    </footer>
